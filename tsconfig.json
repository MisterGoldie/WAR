{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "dist",
    "types": ["node"]
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules"]
}